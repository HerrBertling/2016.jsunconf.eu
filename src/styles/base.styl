*, *:before, *:after
  box-sizing: border-box
  margin: 0
  padding: 0

::-moz-selection
  background: rgba(145, 28, 128, 0.8)

::selection
  background: rgba(145, 28, 128, 0.8)

::-webkit-input-placeholder
  color: rgba(255, 255, 255, 0.5)

:-moz-placeholder
  color: rgba(255, 255, 255, 0.5)

::-moz-placeholder
  color: rgba(255, 255, 255, 0.5)

:-ms-input-placeholder
  color: rgba(255, 255, 255, 0.5)

html
  min-height: 100%
  font-size: 100%
  tap-highlight-color: rgba(0, 0, 0, 0)

body
  font-size: 1rem

  display: flex
  align-items: center
  flex-direction: column

  padding: 0 emCalc(25px)
  background: $backgroundColor
  background-image:  url('../images/ticket.png'),   url('../images/keyvisual.png'), url('../images/sponsor.png')
  background-repeat: no-repeat
  background-position: center 275vh, right 100vh, center 415vh
  background-size: 50vh, 90vh, 50vh

  font-family: Raleway, sans-serif
  line-height: 1.2
  color: #fff
  font-feature-settings: 'kern' 1

  min-height: 100%

  @media $mqSmall
    background-position: center 195vh, right 60vh, center 290vh
    background-size: 50vh, 100vh, 50vh

  @media $mqMiddle
    background-size: 50vh, 70vh, 50vh
    background-position: left 70vh, right 100px, right 170vh

  @media $mqNormal
    background-size: 60vh, 80vh, 60vh
    background-position: left 70vh, right 100px, right 150vh

header,
nav,
section
  max-width: emCalc(1200)
  width: 100%

ul
  list-style: none

li
  margin: 0

button,
.button
  font-size: remCalc(18)
  display: inline-block
  padding: emCalc(20, 18) emCalc(30, 18)

  box-shadow: 2px 2px 3px $blue
  border: transparent solid
  // border-width: 0 emCalc(4, 18) emCalc(4, 18) 0
  border-radius: emCalc(4, 18)

  color: $mainFontColor
  letter-spacing: .5px

  background: $lighterBlue
